USE_OCAMLFIND = true

BYTE_ENABLED = true

OCAMLPACKS[] =
   curl
   lwt.preemptive
   lwt.syntax
   pcre

if $(not $(OCAMLFIND_EXISTS))
   eprintln(This project requires ocamlfind, but is was not found.)
   eprintln(You need to install ocamlfind and run "omake --configure".)
   exit 1

OCAMLFINDFLAGS = -syntax camlp4o
OCAMLFLAGS     = -bin-annot -g -w +a-4-6-9-27..29-32..99 -warn-error -a -thread

OBJECTS[] =
   curl_lwt_ez

.PHONY: clean doc

.DEFAULT: $(OCamlLibrary curl_lwt, $(OBJECTS))

toplevel: curl_lwt.cma
	ocamlfind ocamlmktop \
	    $(mapprefix -package, $(OCAMLPACKS)) \
	    -o toplevel curl_lwt.cma -linkpkg -thread

section
    OCAML_LIBS[] = curl_lwt
    EXAMPLES[]   = ex01
    foreach(P, $(EXAMPLES))
    	OCamlProgram($(P), $(P))

doc:
	mkdir -p doc
	ocamlfind ocamldoc -package curl,lwt,netstring -d doc -html *.mli

clean:
	rm -rf $(filter-proper-targets $(ls R, .)) *.annot *.s doc
