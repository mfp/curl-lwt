USE_OCAMLFIND = true

BYTE_ENABLED = true

OCAMLPACKS[] =
   curl
   lwt.preemptive
   lwt.syntax
   netstring
   pcre

if $(not $(OCAMLFIND_EXISTS))
   eprintln(This project requires ocamlfind, but is was not found.)
   eprintln(You need to install ocamlfind and run "omake --configure".)
   exit 1

OCAMLFINDFLAGS = -syntax camlp4o
OCAMLFLAGS     = -bin-annot -g -w +a-4-6-9-27..29-32..99 -warn-error +a-4-6-7-9-18-27..29-32..99 -thread

OBJECTS[] =
   curl_lwt

.PHONY: clean

.DEFAULT: $(OCamlLibrary curl_lwt, $(OBJECTS))

toplevel: curl_lwt.cma
	ocamlfind ocamlmktop \
	    $(mapprefix -package, $(OCAMLPACKS)) \
	    -o toplevel curl_lwt.cma -linkpkg -thread

section
    OCAML_LIBS[] = curl_lwt
    EXAMPLES[]   = ex01
    foreach(P, $(EXAMPLES))
    	OCamlProgram($(P), $(P))


clean:
	rm -f $(filter-proper-targets $(ls R, .)) *.annot *.s
